                                                                        img(src='https://cdn-images.mailchimp.com/icons/social-block-v2/dark-forwardtofriend-48.png' alt='Email' style='display:block;' height='24' width='24')
                                                                    td.mcnFollowTextContent(align='left' valign='middle' style='padding-left:5px;')
                                                                      a(href='mailto:mnhan0403@email.com' target='' style='font-family: Helvetica;font-size: 12px;text-decoration: none;color: #656565;') Email